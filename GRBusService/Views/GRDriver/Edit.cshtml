@model GRBusService.Models.driver
@using GRBusService.App_GlobalResources

@{
    ViewBag.Title = GRTranslations.editFor + Session["fullName"];
}

<h2>@ViewBag.Title</h2>


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

