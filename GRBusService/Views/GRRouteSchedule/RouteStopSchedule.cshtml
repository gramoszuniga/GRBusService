@model IEnumerable<GRBusService.Models.routeSchedule>

@{
    ViewBag.Title = "RouteStopSchedule";
}

<h2>Stop: @Session["busStop"]</h2>

<h3>Route: @Session["busRoute"]</h3>

<h3>Mon-Fri</h3>

<table class="table">

@foreach (var item in Model)
{
    if (item.isWeekDay)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.startTime)
            </td>
        </tr>
    }
}

</table>

<h3>Sat-Sun & Holidays</h3>

<table class="table">

@foreach (var item in Model)
{
    if (!item.isWeekDay)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.startTime)
            </td>
        </tr>
    }
}

</table>