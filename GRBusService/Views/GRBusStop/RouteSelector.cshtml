@model GRBusService.Models.routeStop

@{
    ViewBag.Title = "RouteSelector";
}

<h2>Select Route to See Schedule at @Session["location"]</h2>


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group">
            @Html.LabelFor(model => model.routeStopId, "Routes:", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.DropDownList("routeStopId", null, htmlAttributes: new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.routeStopId, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Get Schedule" class="btn btn-default" />
            </div>
        </div>
    </div>
}
